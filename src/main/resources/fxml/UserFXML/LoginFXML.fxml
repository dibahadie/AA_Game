<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.UserMenu.LoginMenu"
            prefHeight="500.0" prefWidth="600.0" id="mainPain"
            fx:id="pane">
    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="5">
            <ImageView fitHeight="100" fitWidth="100"
                       preserveRatio="true" pickOnBounds="true">
                <Image url="@../../pictures/logo.png"/>
            </ImageView>

            <TextField alignment="CENTER" promptText="username" fx:id="username" prefWidth="160"/>
            <Text fx:id="UsernameErrorPrompt" wrappingWidth="160"
                  id="ErrorPrompt"/>

            <PasswordField alignment="CENTER" promptText="password" fx:id="password" prefWidth="160"/>
            <Text fx:id="PasswordErrorPrompt" wrappingWidth="160"
                  id="ErrorPrompt"/>

            <Button text="login" prefWidth="160" onMouseClicked="#loginClicked"/>
            <Button text="signup" prefWidth="160" onMouseClicked="#signupClicked"/>
            <Button text="start as a guest" prefWidth="160" onMouseClicked="#guestEntrance"/>
        </VBox>
    </center>


</BorderPane>
