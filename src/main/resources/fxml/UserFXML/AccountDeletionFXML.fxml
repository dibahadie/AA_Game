<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color : #EFEEE0">
    <center>
        <VBox alignment="CENTER" spacing="6">
        <Text text="Are you sure you want to delete your account?" fx:id="message"
              wrappingWidth="250" textAlignment="CENTER"/>
        <HBox alignment="CENTER" spacing="5">
            <Button text="yes" prefWidth="80"
                    style="-fx-background-radius: 0; -fx-background-color: lightgray;"
                    fx:id="confirmationButton"/>
            <Button text="cancel" prefWidth="80"
                    style="-fx-background-radius: 0; -fx-background-color: lightgray;"
                    fx:id="cancelButton"/>
        </HBox>
        </VBox>
    </center>

</BorderPane>
