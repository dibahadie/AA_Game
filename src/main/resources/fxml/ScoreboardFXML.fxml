<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" fx:id="ScoreBoardPain"
      fx:controller="view.ScoreBoardMenu"
      style="-fx-background-color : #EFEEE0"
      alignment="CENTER" spacing="10">

    <TableView fx:id="rankings" maxWidth="300" maxHeight="300" style="-fx-background-color: #EFEEE0;
        -fx-border-color: black; -fx-border-width: 1">
        <columns>
            <TableColumn text="username" prefWidth="75" style="-fx-background-color: lightgray">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="rank" prefWidth="75" style="-fx-background-color: lightgray">
                <cellValueFactory>
                    <PropertyValueFactory property="rank"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="HighScore" prefWidth="75" style="-fx-background-color: lightgray">
                <cellValueFactory>
                    <PropertyValueFactory property="highScore"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="time" prefWidth="75" style="-fx-background-color: lightgray">
                <cellValueFactory>
                    <PropertyValueFactory property="recordTime"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button text="back" prefWidth="190" alignment="CENTER"
            style="-fx-background-radius: 0; -fx-background-color: lightgray;"
            fx:id="backButton"/>

</VBox>
